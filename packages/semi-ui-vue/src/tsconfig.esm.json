{
  "extends": "../tsconfig.json",
  "exclude": ["./**/*.spec.*","./**/_stories/.*","./**/_stories/.*","./**/__stories__/.*",
    "./main.ts", "../script/*",
    "./Comp1",
    "./App.tsx",
    "./**/__test__"
  ],
  "compilerOptions": {
    "rootDir": "./components",
    "outDir": "../lib",
    "strictNullChecks": false,
    "noEmit": true,
    "module": "ES6",
    "target": "ES6",
    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "jsxImportSource": "vue",
    "types": ["vite/client", "node", "vue"],
    "noImplicitAny": false
  }
}
